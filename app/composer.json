{
    "name": "mar4ehk0/status_site",
    "type": "project",
    "license": "MIT",
    "description": "Site status/ health checker.",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require": {
        "php": "^8.3",
        "symfony/dependency-injection": "^7.0",
        "symfony/console": "^7.0",
        "symfony/dotenv": "^7.0",
        "symfony/http-client": "^7.0",
        "monolog/monolog": "^3.6"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "symfony/var-dumper": "^6.3",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^11.1",
        "friendsofphp/php-cs-fixer": "^3.53"
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "_php-cs-fixer": "php-cs-fixer --config=.php-cs-fixer.php --allow-risky=yes",
        "lint": "@_php-cs-fixer check --diff",
        "fix": "@_php-cs-fixer fix"
    }
}
